# =====================================
# StreamSlugger Optimized Redirects & Security
# =====================================

# Enable rewrite engine
RewriteEngine On

# 1️⃣ Redirect www → non-www
RewriteCond %{HTTP_HOST} ^www\.streamslugger\.com [NC]
RewriteRule ^(.*)$ https://streamslugger.com/$1 [L,R=301]

# 2️⃣ Redirect HTTP → HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://streamslugger.com/$1 [L,R=301]

# 3️⃣ Custom 404 page
ErrorDocument 404 /404.html


